/* pages/score/score.wxss */
page {
  background: linear-gradient(
    0deg,
    rgba(161, 140, 209, 0.2) 0%,
    rgba(251, 194, 235, 0.2) 100%
  );
}

.container {
  padding: 20rpx;
}

.header {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header > view {
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.82);
  box-shadow: 0px 0px 10px -20px rgba(0, 0, 0, 0.05);
  height: 100rpx;
}

.score-types {
  width: 312rpx;
  padding: 8rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.score-type {
  width: calc((100% - 20rpx) / 2);
  height: 70rpx;
  border-radius: 20rpx;
  background: rgba(230, 230, 230, 0.8);
  box-shadow: 0px 0px 10px -20px rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #3b3b3b;
}

.score-type.active {
  background: var(--primary-color);
  color: #ffffff;
}

.score-term {
  width: 276rpx;
  padding: 8rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #3b3b3b;
}

.score-list {
  width: 100%;
  border-radius: 20rpx;
  background: var(--bg-color);
  box-shadow: 0px 0px 10rpx -20rpx rgba(0, 0, 0, 0.05);
  margin-top: 26rpx;
  padding: 30rpx;
}

.term-name {
  font-size: 32rpx;
  color: #555555;
  text-align: center;
}

.list {
  margin-top: 30rpx;
}

.score-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 70rpx;
  margin-top: 12rpx;
}

.score-item:not(:last-child) {
  border-bottom: 1rpx solid rgba(232, 224, 235, 0.5);
}

.course-name {
  font-size: 32rpx;
  color: var(--text-color);
}

.course-score {
  font-size: 32rpx;
  color: var(--primary-color);
}

.course-score.fail {
  color: #9c9c9c;
}

.raw-score__content {
  font-weight: 400;
  font-size: 24rpx;
  color: var(--text-color-light);
}

.update-btn {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: var(--primary-color);
}
page {
  background: #fafafa; 
}

.login {
  padding: 30rpx;
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
}

.form-item .input {
  flex: 1;
  height: 100rpx;
  border: 1rpx solid #e8e8e8; 
}

.form-item image {
  width: 32rpx;
  height: 32rpx;
}

.login button {
  width: 100%;
  height: 98rpx;
  border-radius: 60rpx;
  background: linear-gradient(
    90deg,
    rgba(193, 239, 245, 0.9) 0%,
    rgba(10, 232, 240, 1) 1%,
    rgba(136, 242, 223, 1) 100%
  );
  box-shadow: 0rpx 0rpx 12rpx 0rpx rgba(0, 0, 0, 0.1);
  color: #fff;
  margin-top: 100rpx;
}

.header {
  display: flex;
  justify-content: center;
  margin-top: 106rpx;
}

.header image {
  width: 288rpx;
  height: 176rpx;
}

.form-item {
  height: 98rpx;
  width: 100%;
  border-radius: 60rpx;
  background: #ffffff; 
  border: 1rpx solid rgba(232, 232, 232, 0.86); 
  box-shadow: 8rpx 8rpx 2rpx -4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
}


.container {
  padding: 48rpx 20rpx;
}

.logo {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo image {
  width: 344rpx;
  height: 176rpx;
}

.nav-list {
  width: 100%;
  height: 176rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0px 0px 24rpx -4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 40rpx;
  margin-top: 46rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nav-item image {
  width: 96rpx;
  height: 96rpx;
}

.nav-title {
  font-size: 24rpx;
  color: #3d3d3d;
  margin-top: 4rpx;
}



.course-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
}


.course-list {
  width: 100%;
}

.course-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.course-item:not(:last-child) {
  border-bottom: 1rpx solid #f6f6f6;
}

.course-name {
  color: #3D3D3D;
}

.course-address {
  font-size: 24rpx;
  color: #838383;
}

.empty-course {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}


/* --- Optimized Styles âœ¨ --- */

/* Main container for the schedule card */
.today-course {
  display: flex; /* Enables flexbox layout */
  flex-wrap: wrap; /* Allows items to wrap to the next line */
  justify-content: space-between; /* Puts space between title and time */
  align-items: center; /* Vertically aligns title and time */
  row-gap: 20rpx; /* Space between the header row and the content box */
  
  width: 100%;
  border-radius: 32rpx; /* Softer, more modern corners */
  background: #ffffff;
  /* A more subtle and contemporary shadow */
  box-shadow: 0 8rpx 32rpx rgba(108, 118, 133, 0.08);
  margin-top: 30rpx;
  padding: 32rpx;
  border: 1rpx solid #f0f0f0; /* A light border for better definition */
}

/* Schedule Title */
.option-title {
  font-size: 38rpx;
  color: #333333; /* Darker text for better contrast */
  font-weight: 600; /* Bolder for more emphasis */
}

/* Schedule Date/Time Tag */
.option-time {
  font-size: 26rpx;
  color: #555555;
  background-color: #f7f7f8; /* A subtle background chip/tag */
  padding: 8rpx 18rpx;
  border-radius: 30rpx;
}

/* Container for the empty state message */
.course-box {
  width: 100%; /* Ensures it takes full width and wraps below the header */
  margin-top: 20rpx; /* Replaces the old margin-top: 10rpx */
  padding: 50rpx 0; /* Vertical padding to create space */
  border-top: 1rpx solid #f5f5f5; /* Separator line */

  /* Using Flexbox to perfectly center the content */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 24rpx; /* Modern way to set space between flex items */
}

/* Empty state image */
.course-box .empty-img {
  width: 280rpx; /* Slightly larger for more visual impact */
  height: 147rpx; /* Maintain aspect ratio */
  opacity: 0.85; /* Slightly transparent to feel lighter */
}

/* Empty state text */
.empty-title {
  font-size: 28rpx;
  color: #a0a0a0;
  margin-top: 0; /* Replaced by 'gap' in the parent container */
}